.auth_form {
  width: 340px;
  display: flex;
  flex-flow: column nowrap;
  padding: 30px;
  box-shadow: 0 0 4px 4px rgb(0 0 0 / 10%);
  border-radius: 6px;

  & > p {
    text-align: center;
    font-size: 20px;
    font-weight: 600;
    margin-bottom: 20px;
  }

  .input_group:not(:last-of-type) {
    margin-bottom: 20px;
  }
}

.auth_form_buttons {
  display: flex;
  flex-flow: column nowrap;
  margin-top: 20px;
}

.auth_form_buttons button:not(:last-of-type) {
  margin-bottom: 8px;
}
