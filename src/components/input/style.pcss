.input_group {
  display: flex;
  flex-flow: column nowrap;

  &_error {
    font-size: 12px;
    color: var(--red-500);
  }

  label {
    color: var(--gray-700);
    font-size: 14px;
    margin-bottom: 4px;
  }

  input {
    padding: 12px 16px;
    transition: border-color 0.25s;
    border: 1px solid var(--gray-300);
  }

  input:focus {
    border-color: var(--blue-500);
  }
}
