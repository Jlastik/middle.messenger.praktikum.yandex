.messages_controls {
    display: flex;
    align-items: center;
    border-top: 1px solid var(--gray-200);
    padding-top: 10px;
}

.message_input {
    flex-grow: 1;
    margin: 0 10px;

    & > input {
        width: 100%;
        padding: 10px 20px;
        background-color: var(--gray-100);
        border-radius: 30px;
    }
}
