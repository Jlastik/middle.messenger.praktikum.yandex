.search_input_container {
    position: relative;
    margin: 10px 0;
    & > img {
        position: absolute;
        left: 10px;
        top: 50%;
        transform: translateY(-50%);
    }
}
.search_input {
    width: 100%;
    border: none;
    padding: 10px 20px 10px 30px;
    background-color: var(--gray-100);
    &:focus {
        box-shadow: inset 0 0 4px 2px rgba(0, 0, 0, 0.05);
    }
}
